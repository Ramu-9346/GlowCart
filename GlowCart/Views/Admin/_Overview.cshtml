@{
    ViewBag.Title = "Admin Overview";
    Layout = null; // Loaded dynamically via AJAX
}

<!-- Bootstrap & Chart.js -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">
    <h4 class="text-primary fw-bold mb-3">📊 Dashboard Overview</h4>
    <p class="text-muted">Here’s your store summary at a glance:</p>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-warning text-dark text-center">
                <div class="card-body">
                    <h5>📦 Products</h5>
                    <h3 id="totalProducts">0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-info text-light text-center">
                <div class="card-body">
                    <h5>🧾 Orders</h5>
                    <h3 id="totalOrders">0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-success text-light text-center">
                <div class="card-body">
                    <h5>👥 Users</h5>
                    <h3 id="totalUsers">0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-danger text-light text-center">
                <div class="card-body">
                    <h5>💰 Sales (₹)</h5>
                    <h3 id="totalSales">0</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="card shadow border-0 p-4">
        <h5 class="fw-bold mb-3">📈 Sales Overview</h5>
        <canvas id="salesChart" height="120"></canvas>
    </div>
</div>

<!-- jQuery for Dynamic Data -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // 🔹 Fetch summary counts from backend
        $.ajax({
            url: '/Admin/GetOverviewStats',
            type: 'GET',
            success: function (data) {
                $("#totalProducts").text(data.totalProducts);
                $("#totalOrders").text(data.totalOrders);
                $("#totalUsers").text(data.totalUsers);
                $("#totalSales").text(data.totalSales);

                // 🔹 Render Chart
                const ctx = document.getElementById('salesChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Products', 'Orders', 'Users', 'Sales'],
                        datasets: [{
                            label: 'Store Summary',
                            data: [data.totalProducts, data.totalOrders, data.totalUsers, data.totalSales],
                            backgroundColor: ['#ffc107', '#0dcaf0', '#198754', '#dc3545']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: { display: false }
                        }
                    }
                });
            },
            error: function () {
                alert("⚠️ Failed to fetch overview stats.");
            }
        });
    });
</script>
