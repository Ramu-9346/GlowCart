@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Keep your main layout
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/admin-tabs.css" asp-append-version="true" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<div class="admin-dashboard-container">
    <div class="admin-header">
        <ul class="admin-tabs">
            <li class="tab-item active" data-page="/Admin/_Overview">Overview</li>
            <li class="tab-item" data-page="/Admin/_Products">Product Management</li>
            <li class="tab-item" data-page="/Admin/_Orders">Orders</li>
            <li class="tab-item" data-page="/Admin/_ActiveUsers">Active Users</li>
        </ul>
    </div>

    <div id="adminContent" class="admin-content">
        <p class="text-center text-muted mt-5">Loading content...</p>
    </div>
</div>



<script>
    $(document).ready(function () {
        // Load Overview tab by default
        $("#adminContent").load("/Admin/_Overview");

        $(".tab-item").click(function () {
            $(".tab-item").removeClass("active");
            $(this).addClass("active");

            const page = $(this).data("page");
            $("#adminContent").html("<p class='text-center text-muted mt-4'>Loading...</p>");
            $("#adminContent").load(page, function (response, status) {
                if (status === "error") {
                    $("#adminContent").html("<p class='text-danger text-center mt-4'>Error loading content</p>");
                }
            });
        });
    });
</script>



