<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GlowCart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand text-warning fw-bold" href="/Home/Index">GlowCart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Product/GetProducts">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Order/History">Orders</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
                </ul>

                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                       id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/images/profile.png" alt="profile" width="32" height="32" class="rounded-circle me-2">
                        <strong>@(Context.Session.GetString("UserEmail")?.Split('@')[0] ?? "Guest")</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-small shadow">
                        <li><a class="dropdown-item" href="/Account/Profile">Profile</a></li>
                        <li><a class="dropdown-item" href="/Order/History">My Orders</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger fw-bold" href="/Account/Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer bg-dark text-center text-light py-3 mt-5">
        <p class="mb-0">© 2025 GlowCart by Ramu Runja. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
