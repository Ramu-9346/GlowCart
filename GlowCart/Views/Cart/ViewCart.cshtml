@model IEnumerable<GlowCart.Entities.Models.Cart>

@{
    ViewBag.Title = "Your Shopping Cart";
    Layout = null; // If you’re not using a shared layout
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />

<div class="container mt-5 mb-5 cart-container">
    <h2 class="text-warning text-center fw-bold mb-4">🛒 Your Shopping Cart</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center fw-bold fs-5">
            ⚠️ Your cart is empty. <a href="/Product/GetProducts" class="text-decoration-none text-primary">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-lg rounded">
            <table class="table table-dark table-hover align-middle text-center">
                <thead class="table-warning text-dark">
                    <tr>
                        <th>Product</th>
                        <th>Image</th>
                        <th>Price (₹)</th>
                        <th>Quantity</th>
                        <th>Total (₹)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="cartBody">
                    @foreach (var item in Model)
                    {
                        <tr data-id="@item.CartId" data-price="@item.Price">
                            <td>@item.ProductName</td>
                            <td>
                                <img src="@Url.Content("~/images/" + item.ImageUrl)" class="cart-img" alt="@item.ProductName" />
                            </td>
                            <td>@item.Price</td>
                            <td class="quantity-cell">
                                <button class="btn btn-sm btn-outline-warning btn-decrease">-</button>
                                <span class="mx-2 quantity">@item.Quantity</span>
                                <button class="btn btn-sm btn-outline-success btn-increase">+</button>
                            </td>
                            <td class="item-total">@item.Total</td>
                            <td>
                                <button class="btn btn-danger btn-sm btn-remove">🗑️ Remove</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="cart-summary mt-4 p-4 rounded bg-dark text-light shadow">
            <h4>Total: ₹<span id="cartTotal">@Model.Sum(x => x.Total)</span></h4>
            <div class="mt-3">
                <button id="clearCart" class="btn btn-outline-danger me-3">🧹 Clear Cart</button>
                <a href="/Order/Checkout" class="btn btn-warning fw-bold">Proceed to Checkout →</a>
            </div>
        </div>
    }
</div>

<!-- jQuery & Bootstrap -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {

        // 🔁 Update total price function
        function updateCartTotal() {
            let total = 0;
            $("#cartBody tr").each(function () {
                const qty = parseInt($(this).find(".quantity").text());
                const price = parseFloat($(this).data("price"));
                total += qty * price;
            });
            $("#cartTotal").text(total.toFixed(2));
        }

        // ➕ Increase quantity
        $(".btn-increase").click(function () {
            const row = $(this).closest("tr");
            const qtyEl = row.find(".quantity");
            const newQty = parseInt(qtyEl.text()) + 1;
            qtyEl.text(newQty);
            const price = parseFloat(row.data("price"));
            row.find(".item-total").text((newQty * price).toFixed(2));

            updateCartTotal();

            // AJAX call to update in DB
            const cartId = row.data("id");
            $.ajax({
                url: '/Cart/AddToCart',
                type: 'POST',
                data: { productId: row.data("id"), quantity: 1 },
                success: function () { console.log("Updated quantity"); }
            });
        });

        // ➖ Decrease quantity
        $(".btn-decrease").click(function () {
            const row = $(this).closest("tr");
            const qtyEl = row.find(".quantity");
            const currentQty = parseInt(qtyEl.text());
            if (currentQty > 1) {
                const newQty = currentQty - 1;
                qtyEl.text(newQty);
                const price = parseFloat(row.data("price"));
                row.find(".item-total").text((newQty * price).toFixed(2));

                updateCartTotal();

                // Update on server
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { productId: row.data("id"), quantity: -1 },
                    success: function () { console.log("Decreased quantity"); }
                });
            }
        });

        // 🗑️ Remove item
        $(".btn-remove").click(function () {
            const row = $(this).closest("tr");
            const cartId = row.data("id");

            $.ajax({
                url: '/Cart/RemoveItem',
                type: 'POST',
                data: { cartId },
                success: function (response) {
                    if (response.success) {
                        row.fadeOut(400, function () {
                            $(this).remove();
                            updateCartTotal();
                        });
                    } else {
                        alert("⚠️ Failed to remove item.");
                    }
                }
            });
        });

        // 🧹 Clear Cart
        $("#clearCart").click(function () {
            if (!confirm("Are you sure you want to clear your cart?")) return;

            $.ajax({
                url: '/Cart/ClearCart',
                type: 'POST',
                success: function (response) {
                    if (response.success) {
                        $("#cartBody").empty();
                        $("#cartTotal").text("0.00");
                        alert("🧹 Cart cleared successfully!");
                    }
                }
            });
        });
    });
</script>
