@{
    Layout = null;
}

<div class="forgot-password-form animate-fade-in">
    <h3 class="text-center mb-4">Reset Your Password</h3>
    <form id="forgotPasswordForm">
        <div class="mb-3">
            <label for="fpEmail" class="form-label text-muted">Enter your registered email</label>
            <input type="email" class="form-control text-center" id="fpEmail" name="Email" placeholder="example@email.com" required />
        </div>

        <button type="submit" class="btn w-100 mt-3" style="background-color:#d4af7a;color:#fff;font-weight:bold;">
            Send Reset Link
        </button>

        <p class="text-center mt-3 text-success fw-bold" id="fpMessage"></p>

        <div class="text-center mt-3">
            <a href="#" id="backToLogin" class="text-decoration-none text-primary">⬅ Back to Login</a>
        </div>
    </form>
</div>
